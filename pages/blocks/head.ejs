<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="./materialize/js/masonry.min.js"></script>
    <style>
        .four-lines {
            text-overflow: ellipsis;
            overflow: hidden;
            -ms-line-clamp: 4;
            -webkit-line-clamp: 4;
            line-clamp: 4;
            display: -webkit-box;
            word-wrap: break-word;
            -webkit-box-orient: vertical;
            box-orient: vertical;
        }

        .one-line {
            text-overflow: ellipsis;
            overflow: hidden;
            -ms-line-clamp: 1;
            -webkit-line-clamp: 1;
            line-clamp: 1;
            display: -webkit-box;
            word-wrap: break-word;
            -webkit-box-orient: vertical;
            box-orient: vertical;
        }

        .btn {
            height: 30px;
            padding: 10px 30px 10px 30px;
            font-size: 18px;
            border-radius: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-text {
            margin-top: 5px;
        }

        .btn-icon {
            margin-right: 8px;
        }

        .center {
            text-align: center;
        }

        body {
            font-family: "Roboto", sans-serif;
        }

        .container {
            padding: 15px;
            height: 100%;
        }

        .btn {
            cursor: pointer;
        }

        .form-input {
            font-size: 20px;
            padding-bottom: 5px;
            outline: none;
            background: transparent;
            transition: 0.3s;
            width: 100%;
        }

        .form-input:focus {
            outline: none;
            border: none;
            border-bottom: 1px solid blue;
        }

        .input-group {
            width: 100%;
            position: relative;
            margin-bottom: 20px;
        }

        .form-label {
            position: absolute;
            left: 0;
            top: 0;
            font-size: 20px;
            transition: 0.3s;
        }

        .form-input:focus ~ label,
        .form-input:not(:placeholder-shown) ~ label {
            top: -20px;
            font-size: 15px;
        }

        .textarea-field {
            width: 100vw;
            padding: 30px;
        }

        .item-textarea {
            height: 80px;
            min-height: 80px;
            width: 100%;
            resize: vertical;
            background: transparent;
            outline: none;
            border-radius: 10px;
            padding: 10px;
            font-size: 15px;
        }

        .item-textarea:focus {
            outline: none;
        }

        .remove-button-field {
            width: 80px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .collection-item {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
        }

        .rounded-btn {
            border-radius: 50%;
            font-size: 10px;
            width: 30px;
            height: 30px;
            padding: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }

        #add-item-button-field {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 15px;
        }

        .buttons-group {
            width: 100%;
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin-top: 50px;
        }

        .button-container-2 {
            width: 50%;
            display: flex;
            justify-content: center;
        }

        .button-container-2-wrap {
            width: 50%;
            display: flex;
            justify-content: center;
            min-width: 290px;
            margin-bottom: 20px;
        }

        .button-container-3-wrap {
            width: 33.3%;
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        @media (max-width: 610px) {
            .button-container-2-wrap {
                width: 100%;!important;
            }
        }

        @media (max-width: 620px) {
            .button-container-3-wrap {
                width: 100%;
            }
        }

        .big-btn {
            width: 230px;
        }
    </style>
    <% if (theme === 'dark') { %>
        <%- include('dark_theme.ejs') %>
    <% } else if (theme === 'light') { %>
        <%- include('light_theme.ejs') %>
    <% } else if (theme === 'red') { %>
        <%- include('red_theme.ejs') %>
    <% } else if (theme === 'blue') { %>
        <%- include('blue_theme.ejs') %>
    <% } else if (theme === 'purple') { %>
        <%- include('purple_theme.ejs') %>
    <% } %>
    <title>electron-notes</title>
</head>
<body>
